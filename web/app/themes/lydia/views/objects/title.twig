{#
* Title
* --------
* @package Lydia
* @since Lydia 3.0
#}
{% set title = {
    el     : el     ? el : 'h1',
    id     : id     ? 'id="' ~ id ~ '"' : '',
    title  : title,
    before : before ? before : '',
    after  : after  ? after : '',
    class  : class  ? ' ' ~ class ~ '__title' : '',
    style  : style  ? style : 'default',
    meta   : meta   ? meta : '',
} %}
<{{ title.el }} class="o-title o-title--{{ title.el }} o-title--{{ title.style }}{{ title.class }}" {{ title.meta }} {{ title.id }}>{{ title.before }}{{ title.title }}{{ title.after }}</{{ title.el }}>
