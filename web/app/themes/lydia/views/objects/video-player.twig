{#
* Video Player
* --------
* @package GJ
* @since GJ 3.0
#}
<video
class="video-js vjs-big-play-centered vjs-fluid"
id="video-js--{{ style }}"
{% if controls %}
controls
{% endif %}
preload="auto"
width="100%"
height="100%"
{{ " " ~ attr ~ " "}}
poster="{{ Image(thumb.src)|resize(size.w, size.h , 'center') }}"
data-setup='{ "techOrder": ["html5"], "sources": [{ "type": "video/mp4", "src": "{{ src }}"}] }'>
</video>
