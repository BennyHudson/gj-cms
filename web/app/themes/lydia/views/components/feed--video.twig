{#
* Feed for Video
* --------
* @package GJ
* @since GJ 3.0
#}

{#
* Set Var
* --------
* @since 3.0
* @version 1.0
#}
{% for category in categories if category.ID == catID %}
    {% set posts = Post(category.get_posts( categoriesArgs )) %}
    {% set headerInfo = {
        'title': category.name,
        'subtitle' : category.description,
        'link' : category.link
    } %}

{#
* Template
* --------
* @since 3.0
* @version 1.0
#}
<section class="o-post-group o-post-group--dark o-post-group--featured--single o-post-group--{{ category.name|lower }}{{ border ? ' o-post-group--border' : '' }}">

    {% if wrapper is not empty %}
    <div class="o-wrapper o-wrapper--{{ wrapper }}">
    {% endif %}

        {% include 'components/feed__header.twig' with { header : headerInfo } %}
        <div class="o-post-feed o-post-feed--video">
            {% for post in posts|slice(0,1) %}
                {% include 'components/post-thumb--video.twig' with { thumbFeedFull : true, color : 'dark' } %}
            {% endfor %}
        </div>

    {% if wrapper is not empty %}
    </div>
    {% endif %}

</section>

{% endfor %}
