{#
* Section Clubhouse
* --------
* @package components/section
* @version 1.0.0
#}

{% if shop.brands %}
    <section class="c-section-shop">

        <div class="c-section-shop__header">

            {% include 'objects/title.twig' with {
                el: 'h2',
                class: 'c-section-shop',
                title: 'Shop',
            } %}

            {% include 'objects/button.twig' with {
                el: 'a',
                class: 'c-section-shop__link',
                cta: 'Vist Shop',
                link: shop.store_link,
                style: 'minimal',
                after: '<span class="fas fa-chevron-right"></span>'
            } %}

        </div>

        <div class="c-section-shop__brands">

            <div class="c-section-shop__prods-cont">
                <div class="c-section-shop__prods" id="js-section-shop">
                    {% for brand in shop.brands %}

                        <div class="c-section-shop__prod">
                            <a href="{{ brand.link }}" class="c-section-shop__prod-link" target="_blank">
                                {% include 'objects/image.twig' with {
                                    class: 'c-section-shop__prod-feat',
                                    alt : brand.name,
                                    img : {
                                        base : {
                                            obj : Image(brand.featured),
                                            w   : '330'
                                        }
                                    }
                                } %}

                                {% include 'objects/title.twig' with {
                                    el: 'h2',
                                    class: 'c-section-shop__prod',
                                    title: brand.name,
                                } %}
                            </a>
                        </div>

                    {% endfor %}
                </div>
            </div>

                {# Previous #}
            <button class="c-section-shop__previous" id="js-section-shop-previous">
                <svg class="c-arrow c-arrow--light c-arrow--left" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 50 50" width="50px" height="50px">
                <path class="c-arrow__circle" d="M24.9,0h0.2C38.8,0,50,11.2,50,25l0,0c0,13.8-11.2,25-24.9,25h-0.2C11.2,50,0,38.8,0,25l0,0
                    C0,11.2,11.2,0,24.9,0z"/>
                <path class="c-arrow__chevron" d="M21.1,34.8l9-8.5c0.7-0.6,0.9-0.9,0.9-1.2c0-0.3-0.2-0.5-0.9-1.2l-9-8.5l-0.6,0.4l6.8,9.3l-6.8,9.2L21.1,34.8z"
                    />
                </svg>
            </button>

            {# Next #}
            <button class="c-section-shop__next" id="js-section-shop-next">
                <svg class="c-arrow c-arrow--light c-arrow--right" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 50 50" width="50px" height="50px">
                <path class="c-arrow__circle" d="M24.9,0h0.2C38.8,0,50,11.2,50,25l0,0c0,13.8-11.2,25-24.9,25h-0.2C11.2,50,0,38.8,0,25l0,0
                    C0,11.2,11.2,0,24.9,0z"/>
                <path class="c-arrow__chevron" d="M21.1,34.8l9-8.5c0.7-0.6,0.9-0.9,0.9-1.2c0-0.3-0.2-0.5-0.9-1.2l-9-8.5l-0.6,0.4l6.8,9.3l-6.8,9.2L21.1,34.8z"
                    />
                </svg>
            </button>

        </div>

    </section>
{% endif %}
