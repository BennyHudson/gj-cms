{#
* Social Icons
* --------
* @package GJ
* @since GJ 3.0
#}
<div class="c-share c-share--center c-share--{{ class }}">
    <ul class="o-social-links">
        <li class="c-share__item o-social-links__item">
            <a class="c-share__link c-share--twitter" href="https://twitter.com/intent/tweet?text={{ post.title| raw | url_encode(true) }}&amp;url={{ post.link }}&amp;via=thegentsjournal" target="_blank"><span class="fab fa-twitter"></span></a>
        </li>
        <li class="c-share__item o-social-links__item">
            <a class="c-share__link c-share--facebook" href="https://www.facebook.com/sharer/sharer.php?u={{ post.link }}" target="_blank"><span class="fab fa-facebook"></span></a>
        </li>
        <li class="c-share__item o-social-links__item">
            <a class="c-share__link c-share--linkedin" href="https://www.linkedin.com/shareArticle?mini=true&url={{ post.link }}&amp;title={{ post.title| raw | url_encode(true) }}" target="_blank"><span class="fab fa-linkedin"></span></a>
        </li>
        <li class="c-share__item o-social-links__item">
            <a class="c-share__link c-share--mail" href="mailto:?subject={{ post.title }}" target="_blank"><span class="far fa-envelope"></span></a>
        </li>
    </ul>
</div>
