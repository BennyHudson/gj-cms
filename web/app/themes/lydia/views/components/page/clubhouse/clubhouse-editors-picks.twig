<section class="clubhouse-editors-picks">
  {% include 'components/page/clubhouse/clubhouse-title.twig' with {
    title: "Editor's Picks"
  } %}

  {% for post in posts %}
    <div class="clubhouse-editors-picks__tease">
      <div class="clubhouse-editors-picks__index">
        {{ loop.index }}.
      </div>

      <div class="clubhouse-editors-picks__content">
        <div class="clubhouse-editors-picks__info">
          {% for cat in post.terms if cat.ID == membersCatID %}
            <div class="clubhouse-editors-picks__members"
              data-tooltip="Members only">
              <a href="{{ Post(74300).link }}">
                {% include 'objects/icon--padlock.twig' %}
              </a>
            </div>
          {% endfor %}
          <p class="clubhouse-editors-picks__category">
            {{ post.category }}
            <span class="clubhouse-editors-picks__posted">
              &#8213;
              {{
                post.post_date_gmt
                  |time_ago
                  |replace({
                    mins: 'minutes'
                  })
              }}
            </span>
          </p>
        </div>
        <a href="{{ post.link }}" class="clubhouse-editors-picks__title">
          <h1>
            {{ post.post_title }}
          </h1>
        </a>
      </div>

      <a href="{{ post.link }}" class="clubhouse-editors-picks__image">
        {% include 'objects/image.twig' with {
          alt: post.title,
          img: {
            base: {
              obj: Image(post.thumbnail),
              w: '288',
              h: '194',
              c: 'center'
            }
          }
        } %}
        {% if not fn('isAdminUser', user.ID) %}
          {% if not fn('isSubscriber', user.ID) %}
            <div class="clubhouse-featured__overlay">
              <div class="clubhouse-featured__locked">
                <div class="clubhouse-featured__locked-icon"
                  data-tooltip="Members only">
                  {% include 'objects/icon--padlock.twig' %}
                </div>
                <p class="clubhouse-featured__locked-text">
                  This article is for members only
                </p>
              </div>
            </div>
          {% endif %}
        {% endif %}
      </a>
    </div>
  {% endfor %}
</section>
