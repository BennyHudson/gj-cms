{#
* Content Builder : slider
* --------
* @package GJ
* @since GJ 3.0
#}
<figure class="c-content-builder-slider c-content-builder-slider-full {{ wrapper }} c-content-builder-slider--{{ modifier }}" data-animate="fadeUP">

        <div class="c-content-builder-slider__controls">

            {# Previous #}
            <button class="c-content-builder-slider__previous">
                <svg class="c-arrow c-arrow--left c-arrow--light" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 50 50" width="50px" height="50px">
                <path class="c-arrow__circle" d="M24.9,0h0.2C38.8,0,50,11.2,50,25l0,0c0,13.8-11.2,25-24.9,25h-0.2C11.2,50,0,38.8,0,25l0,0
                    C0,11.2,11.2,0,24.9,0z"/>
                <path class="c-arrow__chevron" d="M21.1,34.8l9-8.5c0.7-0.6,0.9-0.9,0.9-1.2c0-0.3-0.2-0.5-0.9-1.2l-9-8.5l-0.6,0.4l6.8,9.3l-6.8,9.2L21.1,34.8z"
                    />
                </svg>
            </button>

            {# Next #}
            <button class="c-content-builder-slider__next">
                <svg class="c-arrow c-arrow--right c-arrow--light" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 50 50" width="50px" height="50px">
                <path class="c-arrow__circle" d="M24.9,0h0.2C38.8,0,50,11.2,50,25l0,0c0,13.8-11.2,25-24.9,25h-0.2C11.2,50,0,38.8,0,25l0,0
                    C0,11.2,11.2,0,24.9,0z"/>
                <path class="c-arrow__chevron" d="M21.1,34.8l9-8.5c0.7-0.6,0.9-0.9,0.9-1.2c0-0.3-0.2-0.5-0.9-1.2l-9-8.5l-0.6,0.4l6.8,9.3l-6.8,9.2L21.1,34.8z"
                    />
                </svg>
            </button>

        </div>

        <div class="c-content-builder-slider__slider-full">

            {% for image in item.slider %}
                <div class="c-content-builder-slider__img-container">


                    {% if image.description %}
                        <a href="{{ image.description }}">
                    {% endif %}

                    {% include 'objects/image.twig' with {
                        class: 'c-content-builder-slider__media',
                        img : {
                            base : {
                                obj : Image(image),
                                w   : '664',
                                h   : '824',
                                c   : 'center'
                            }
                        }
                    } %}

                    {% if image.description %}
                        </a>
                    {% endif %}

                    {% if image.caption %}
                        <figcaption class="c-content-builder__img-caption">{{ image.caption }}</figcaption>
                    {% endif %}
                </div>
            {% endfor %}

        </div>
</figure>
