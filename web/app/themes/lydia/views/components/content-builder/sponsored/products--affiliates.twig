<div class="c-content-builder__slider c-content-builder-slider-products c-content-builder__products--affiliates" data-animate="fadeUP">

    <div class="c-content-builder-slider__controls">

        {# Previous #}
        <button class="c-content-builder-slider__previous c-content-builder-slider__previous--prod">
            <svg class="c-arrow c-arrow--left c-arrow--light" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 50 50" width="50px" height="50px">
            <path class="c-arrow__circle" d="M24.9,0h0.2C38.8,0,50,11.2,50,25l0,0c0,13.8-11.2,25-24.9,25h-0.2C11.2,50,0,38.8,0,25l0,0
                C0,11.2,11.2,0,24.9,0z"/>
            <path class="c-arrow__chevron" d="M21.1,34.8l9-8.5c0.7-0.6,0.9-0.9,0.9-1.2c0-0.3-0.2-0.5-0.9-1.2l-9-8.5l-0.6,0.4l6.8,9.3l-6.8,9.2L21.1,34.8z"
                />
            </svg>
        </button>

        {# Next #}
        <button class="c-content-builder-slider__next c-content-builder-slider__next--prod">
            <svg class="c-arrow c-arrow--right c-arrow--light" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 50 50" width="50px" height="50px">
            <path class="c-arrow__circle" d="M24.9,0h0.2C38.8,0,50,11.2,50,25l0,0c0,13.8-11.2,25-24.9,25h-0.2C11.2,50,0,38.8,0,25l0,0
                C0,11.2,11.2,0,24.9,0z"/>
            <path class="c-arrow__chevron" d="M21.1,34.8l9-8.5c0.7-0.6,0.9-0.9,0.9-1.2c0-0.3-0.2-0.5-0.9-1.2l-9-8.5l-0.6,0.4l6.8,9.3l-6.8,9.2L21.1,34.8z"
                />
            </svg>
        </button>

    </div>

    <div class="c-content-builder-slider__slider-products">
        {% for product in item.affiliate_products %}

            <div class="c-content-builder-slider__item">
                <article class="c-content-builder__product">
                    <a href="{{ product.affiliate_link }}">
                        {% include 'objects/image.twig' with {
                            class: 'c-content-builder__product-media',
                            alt : product.title,
                            img : {
                                base : {
                                    obj : Image(product.image),
                                    w   : '620',
                                    h   : '620',
                                    c   : 'center'
                                }
                            }
                        } %}
                        <h1 class="c-content-builder__product-title">{{ product.title }}</h1>
                        {% if product.price %}
                            <p class="c-content-builder__product-price">Â£{{ product.price }}</p>
                        {% endif %}
                        {% if product.text %}
                            <p class="c-content-builder__product-description">{{ product.text }}</p>
                        {% endif %}
                        </a>
                        {% include 'objects/button.twig' with {
                            el: 'a',
                            cta: product.url_button_text ? product.url_button_text : 'Buy Now',
                            link: product.affiliate_link,
                            style: 'outline',
                            class: 'c-content-builder__prod-wide',
                        } %}
                </article>
            </div>
        {% endfor %}
    </div>


</div>
