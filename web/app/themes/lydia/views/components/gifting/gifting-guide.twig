{% set firstPost = post.meta('featured_guides')[0] %}

<section class="gifting-guide o-wrapper o-wrapper--inner">
  <div class="gifting-guide__first-tease gifting-guide--desktop"
    style="background-image: url({{ Image(firstPost.thumbnail)|resize(
      1920,
      1080
    ) }})">
    <div class="gifting-guide__overlay"></div>

    <div class="gifting-guide__info">
      <h3 class="gifting-guide__category">
        {{ firstPost.category }}
      </h3>
      <h2 class="gifting-guide__title">
        {{ firstPost.title }}
      </h2>
      <div class="gifting-guide__content">
        {{ firstPost.post_excerpt }}
      </div>
      <a href="{{ firstPost.link }}" class="gifting-guide__link">
        Read article
      </a>
    </div>
  </div>

  <div class="gifting-guide--mobile">
    {% for tease in [firstPost] %}
      {% include 'components/gifting/gifting-tease.twig' %}
    {% endfor %}
  </div>

  <div class="gifting-guide__articles">
    {% for tease in post.meta('featured_guides')|slice(1) %}
      {% include 'components/gifting/gifting-tease.twig' %}
    {% endfor %}
  </div>
</section>
