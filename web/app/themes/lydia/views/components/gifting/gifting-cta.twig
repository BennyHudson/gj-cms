<section class="gifting-cta"
  style="background-image: url({{ Image(
    giftImage ? giftImage : post.thumbnail
  )|resize(1920, 1080) }})">
  <div class="gifting-cta__overlay"></div>
  <div class="gifting-cta__container o-wrapper o-wrapper--inner">
    {% if not giftTitle %}
      <div class="gifting-cta__scroller">
        <div class="gifting-cta__chevron fas fa-chevron-down"></div>
        <div class="gifting-cta__chevron fas fa-chevron-down"></div>
        <div class="gifting-cta__chevron fas fa-chevron-down"></div>
      </div>
    {% endif %}
    <div class="gifting-cta__info">
      <h3 class="gifting-cta__category">
        {{ giftCat ? giftCat : post.category }}
      </h3>
      <h2 class="gifting-cta__title">
        {{ giftTitle ? giftTitle : post.title }}
      </h2>
      <div class="gifting-cta__content">
        {{ giftSubtitle ? giftSubtitle : post.post_excerpt }}
      </div>
      <a href="{{ giftLink ? giftLink : post.link }}" class="gifting-cta__link">
        {{ giftLabel ? giftLabel : 'Read article' }}
      </a>
    </div>
  </div>
  {% if post.meta('gifts_items') %}
    {% include 'components/gifting/gifting-widget.twig' with {
      items: post.meta('gifts_items')
    } %}
  {% endif %}
</section>
