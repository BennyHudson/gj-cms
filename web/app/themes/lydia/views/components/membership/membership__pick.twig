<section class="c-membership-pick o-wrapper o-wrapper--inner">

    <div class="c-membership-pick__header">
        {% include 'objects/title.twig' with {
            el: 'h2',
            class: 'c-membership-pick',
            title: 'EDITOR’S PICK',
        } %}
        {% include 'objects/button.twig' with {
            el: 'a',
            cta: 'READ INTERVIEW',
            class : 'c-membership-pick-mobile',
            link : '/?gentleman=dermot-oleary',
            after: '<span class="c-membership-pick__arrow fa fa-angle-right"></span>',
            target: true,
        } %}
    </div>

    <div class="c-membership-pick__items">
        <div class="c-membership-pick__item">
            <img src="/wp-content/themes/lydia/assets/img/woo-placeholder.png">
