{#
* Podcast : Archive Feed
* ---------
* @package components/podcast
#}
{% for post in posts %}

    {% set card = Post(post.ID) %}

    {% include 'components/podcast/podcast__card.twig' with {
        card : card,
        img : {
            base : {
                obj : Image(card.podcast_meta_media_profile),
                w   : '140',
                h   : '140',
                c   : 'center',
            }
        },
        meta : true,
        style : 'archive'
    } %}

{% endfor %}
