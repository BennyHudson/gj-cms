{#
* Product Issue Gallery
* --------
* @package GJ
* @since GJ 3.0
#}
<div class="c-issue-gallery o-wrapper o-wrapper--{{ wrapper }}">

    {# Cover Image #}
    <img class="c-issue-gallery__img-cover" src="{{ Image(post.thumbnail).src|resize(349, 458, 'center') }}" alt="Preview of {{ post.name }}" />

    {# Gallery #}
    <div class="c-issue-gallery__slider-container">
        <div class="c-issue-gallery__slider" id="js-issue-slider">
            {% for image in product.gallery %}
                <img class="c-issue-gallery__img-preview" src="{{ Image(image).src|resize(697, 458, 'center') }}" alt="Preview of {{ post.name }}" />
            {% endfor %}
        </div>
    </div>

    {# Previous #}
    <button class="c-issue-gallery__previous" id="js-issue-slider-previous">
        <svg class="c-arrow c-arrow--light c-arrow--left" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 50 50" width="50px" height="50px">
        <path class="c-arrow__circle" d="M24.9,0h0.2C38.8,0,50,11.2,50,25l0,0c0,13.8-11.2,25-24.9,25h-0.2C11.2,50,0,38.8,0,25l0,0
            C0,11.2,11.2,0,24.9,0z"/>
        <path class="c-arrow__chevron" d="M21.1,34.8l9-8.5c0.7-0.6,0.9-0.9,0.9-1.2c0-0.3-0.2-0.5-0.9-1.2l-9-8.5l-0.6,0.4l6.8,9.3l-6.8,9.2L21.1,34.8z"
            />
        </svg>
    </button>

    {# Next #}
    <button class="c-issue-gallery__next" id="js-issue-slider-next">
        <svg class="c-arrow c-arrow--light c-arrow--right" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 50 50" width="50px" height="50px">
        <path class="c-arrow__circle" d="M24.9,0h0.2C38.8,0,50,11.2,50,25l0,0c0,13.8-11.2,25-24.9,25h-0.2C11.2,50,0,38.8,0,25l0,0
            C0,11.2,11.2,0,24.9,0z"/>
        <path class="c-arrow__chevron" d="M21.1,34.8l9-8.5c0.7-0.6,0.9-0.9,0.9-1.2c0-0.3-0.2-0.5-0.9-1.2l-9-8.5l-0.6,0.4l6.8,9.3l-6.8,9.2L21.1,34.8z"
            />
        </svg>
    </button>
</div>
