    {# News Feed #}
    .c-nf {
        padding: 60px 36px 24px;
        background-color: #f9e9e2;
    }

    @media only screen and (max-width: 360px) {
        .c-nf {
            padding: 60px 24px 24px;
        }
    }

    .c-nf__main-title {
        font-size: 20px;
    }

    .c-nf__header {
        padding-bottom: 24px;
    }

    .c-nf__item {
        border-bottom: 2px solid #7d7d7d;
    }

    .c-nf__item--last {
        border-bottom: none;
    }

    .c-nf__spacer {
        padding: 36px 0;
    }

    @media only screen and (max-width: 480px) {
        .c-nf__spacer {
            display: block;
        }

        .c-nf__spacer--img {
            padding-bottom: 12px
        }
    }

    .c-nf__image {
        width: 142px;
        min-width: 142px;
        margin-right: 36px;
    }

    .c-nf__title {
        font-size: 17px;
        margin-bottom: 6px;
    }

    .c-nf__link,
    .c-nf__title {
        color: #111111 !important;
    }

    .c-nf__excerpt {
        color: #111111;
        font-size: 13px;
        line-height: 20px;
    }
