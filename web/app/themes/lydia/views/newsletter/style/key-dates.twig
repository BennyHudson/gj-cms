    {# Key Dates #}
    .c-kd__main-title {
        font-size: 14px;
        font-weight: 700;
        font-family: Arial;
        line-height: 18px;
        text-transform: uppercase;
        color: #4a4a4a;
        letter-spacing: 0.25px;
        margin-bottom: 24px;
        text-align: center;
    }

    .c-kd-item {
        text-align: center;
    }

    .c-kd-item__bigdate {
        color: #333333;
        font-family: Georgia;
        font-size: 44px;
        font-weight: normal;
        margin-bottom: 12px;
    }

    .c-kd-item__description {
        color: #333333;
        font-family: Georgia;
        font-size: 11px;
        margin-bottom: 24px;
        max-width: 120px;
        display: inline-block;
    }

    .c-kd-item__fulldate,
    .c-kd-item__cta {
        color: #4a4a4a;
        font-family: Arial;
        font-size: 11px;
        font-weight: 700;
        letter-spacing: 0.73px;
    }

    .c-kd-item__fulldate {
        margin-bottom: 4px;
    }

    .c-kd-item__cta {
        text-transform: uppercase;
        display: block;
    }
