* @version 1.0.0
#}
    .c-ex {
        padding: 42px 90px 36px;
        background-color: #ffffff;
        border-bottom: 1px solid #4a4a4a;
    }

    @media only screen and (max-width: 470px) {
        .c-ex {
            padding: 42px 24px 36px;
        }
    }

    .c-ex__main-title {
        font-size: 14px;
        font-weight: 700;
        font-family: Arial;
        line-height: 18px;
        text-transform: uppercase;
        color: #4a4a4a;
        letter-spacing: 0.25px;
        margin-bottom: 24px;
        text-align: center;
    }

    .c-ex__items {
        list-style-position: inside;
        padding: 0;
    }

    .c-ex__part {
        margin-bottom: 26px;
        font-size: 46px;
        font-family: Georgia;
        color: #333333;
        display: inline-block;
        line-height: 20px;
        width: 100%;
    }

    .c-ex__link {
        color: #4a4a4a;
    }

    .c-ex__content {
        float: left;
    }

    .c-ex__index {
        display: block;
        width: 10%;
        color: #4a4a4a;
        float: left;
        height: 40px;
        line-height: 24px;
    }

    .c-ex__title {
        color: #4a4a4a;
        font-family: Arial;
        font-size: 14px;
        line-height: 20px;
        font-weight: 700;
        letter-spacing: 1.55px;
    }

    .c-ex__source {
        color: #4a4a4a;
        font-family: Arial;
        font-size: 11px;
        line-height: 12px;
        letter-spacing: 1.83px;
        text-transform: uppercase;
    }
