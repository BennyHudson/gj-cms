    {# Gallery #}
    .c-gly {
        padding: 24px 24px 0px;;
        background-color: #ffffff;
    }

    @media only screen and (max-width: 400px) {
        .c-gly {
            padding: 24px 12px;
        }
    }

    .c-gly__row--border {
        border-bottom: 1px solid #eaeaea;
    }

    @media only screen and (max-width: 360px) {
        .c-gly__item {
            display: block;
        }
    }

    .c-gly__main-title {
        font-size: 14px;
        font-weight: 700;
        font-family: Arial;
        line-height: 18px;
        text-transform: uppercase;
        color: #4a4a4a;
        letter-spacing: 0.25px;
        margin-bottom: 24px;
        text-align: center;
    }

    .c-gly__spacer {
        padding-bottom: 24px;
    }

    .c-gly__image-wrap {
        margin-right: 18px;
        margin-bottom: 36px;
    }

    @media only screen and (max-width: 510px) {
        .c-gly__image-wrap {
            margin-right: 0;
            padding: 8px;
        }
    }

    .c-gly__image-wrap--last {
        margin-right: 0;
    }

    .c-gly__image {
        width: 100%;
        height: auto;
        max-width: 160px;
    }

    @media only screen and (max-width: 510px) {
        .c-gly__image {
            max-width: 100%;
        }
    }

    .c-gly__title {
        font-size: 17px;
        margin-bottom: 6px;
    }

    .c-gly__caption {
        color: #000 !important;
        font-size: 13px;
        line-height: 20px;
        padding-top: 12px;
        font-family: Georgia;
    }
