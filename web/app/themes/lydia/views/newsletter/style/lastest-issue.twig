    {# Latest Issue #}

    .c-is {
        background-color: #000000;
    }

    .c-is__content__title {
        color: #ffffff;
        font-size: 14px;
        letter-spacing: 0.05px;
        font-weight: 700;
        font-family: Georgia;
    }

    .c-is__content__description {
        color: #ffffff;
        font-family: Georgia;
        font-size: 11px;
        line-height: 16px;
    }

    .c-is__action {
        color: #ffffff;
        font-family: Arial;
        font-size: 11px;
        letter-spacing: 1.83px;
        text-transform: uppercase;
    }

    .c-is__feat {
        padding: 24px 36px 24px 60px;
    }

    .c-is__img {
        min-width: 135px;
    }

    .c-is__content__logo,
    .c-is__content__title {
        margin-bottom: 12px;
    }

    .c-is__content__description {
        margin-bottom: 24px;
    }

    .c-is__content-item {
        padding-right: 24px;
    }

    @media only screen and (max-width: 510px) {
        .c-is__feat,
        .c-is__content-item {
            display: block;
            padding: 24px;
            text-align: center;
        }

        .c-is__link,
        .c-is__content__logo {
            display: inline-block;
        }

        .c-is__feat {
            padding-bottom: 0;
        }

        .c-is__content-item {
            padding-bottom: 36px;
        }
    }
