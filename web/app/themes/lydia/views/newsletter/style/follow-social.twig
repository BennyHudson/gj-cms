    {# Follow Social Media #}
    .c-fl {
        background-color: #f0f0f0;
    }

    .c-fl__platforms {
        padding-top: 48px;
        padding-bottom: 48px;
    }

    .c-fl__social {
        list-style: none;
        margin: 0;
        margin-bottom: 4px;
        padding: 0;
    }

    .c-fl__link {
        color: #111 !important;
    }

    .c-fl__social-item {
        display: inline-block;
        margin: 0 8px;
        padding: 6px;
        list-style: none;
    }

    .c-fl__social-icon {
        width: 21px;
    }

    .c-fl__instaname {
        font-size: 18px;
    }
