    {# Email Body #}
    #c-body-cell {
        background-color: #F5F5F5;
    }

    {# Global #}
    #c-body-email {
        font-family: 'Helvetica Neue', Helvetica, 'Arial', sans-serif;
        max-width: 600px;
        width: 100%;
        background-color: #ffffff;
    }

    {# Flex Container #}
    .c-fxc,
    .c-fxc-cell {
        max-width: 600px;
    }

    .c-pre {
        background-color: #F5F5F5;
    }

    {# Preheader #}
    .c-pre__item {
        font-size: 12px;
        font-style: italic;
        color: #606060;
        padding: 16px 12px;
    }

    .c-pre__item--archive {
        text-align: right;
    }

    @media only screen and (max-width: 360px) {
        .c-pre__item {
            display: block;
            text-align: center;
            padding: 6px 6px;
        }

        .c-pre__item--archive {
            text-align: center;
        }
    }