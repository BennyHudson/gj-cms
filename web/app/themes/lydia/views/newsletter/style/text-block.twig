    {# Text Block #}
    .c-tb {
        background-color: #ffffff;
    }

    .c-tb__content {
        font-size: 14px;
        line-height: 24px;
        padding: 24px 90px 48px;
    }

    @media only screen and (max-width: 470px) {
        .c-tb__content {
            padding: 24px 24px;
        }
    }

    .c-tb__content p {
       margin-bottom: 12px;
       font-family: Georgia;
       color: #333333;
    }

    .c-tb__signature__image {
        width: 112px;
        display: inline-block;
    }
