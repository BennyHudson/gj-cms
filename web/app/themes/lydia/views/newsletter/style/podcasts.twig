    {# Podcasts #}
    .c-pd {
        padding: 36px;
        background-color: #111;
    }

    @media only screen and (max-width: 360px) {
        .c-pd {
            padding: 24px;
        }
    }

    .c-pd__item--first {
        border-bottom: 2px solid #666666;
    }

    .c-pd__spacer-bottom {
        padding-bottom: 24px;
    }

    .c-pd__spacer-top {
        padding-top: 24px;
    }

    @media only screen and (max-width: 480px) {
        .c-pd__spacer-bottom,
        .c-pd__spacer-top {
            display: block;
        }
    }

    .c-pd__image {
        width: 142px;
        min-width: 142px;
        margin-right: 36px;
    }

    .c-pd__title {
        font-size: 18px;
        margin-bottom: 6px;
    }

    .c-pd__link,
    .c-pd__meta-item {
        color: #fff !important;
    }

    .c-pd__excerpt {
        color: #999999;
        font-size: 13px;
        line-height: 20px;
        margin-bottom: 18px;
    }

    .c-pd__meta-item {
        font-size: 14px;
    }

    .c-pd__meta-icon {
        display: inline-block;
        width: 18px;
        max-width: 18px;
        margin-left: 6px;
        margin-bottom: 2px;
        vertical-align: bottom;
    }
