    {# Selected Articles #}
    .c-sa__item {
        background-color: #fff;
    }

    @media only screen and (max-width: 480px) {
        .c-sa--double .c-sa__item {
            display: block;
            padding: 0 12px;
        }
    }

    .c-sa__content {
        padding: 36px 24px 36px;
    }

    @media only screen and (max-width: 480px) {
        .c-sa__content {
            padding: 24px 12px 24px;
        }
    }

    .c-sa__title {
        font-size: 14px;
        font-weight: 700;
        font-family: Arial;
        margin-bottom: 6px;
        line-height: 18px;
        text-transform: uppercase;
        color: #4a4a4a;
        letter-spacing: 0.25px;
        margin-bottom: 12px;
    }

    @media only screen and (max-width: 480px) {
        .c-sa__title {
            font-size: 12px;
            line-height: 14px;
        }
    }

    .c-sa__link {
        color: #111 !important;
        display: block;
    }

    @media only screen and (max-width: 360px) {
        .c-sa--double {
            width: 100%;
        }
    }

    .c-sa__img--double {
        margin: 0 6px
    }

    @media only screen and (max-width: 480px) {
        .c-sa__img--double {
            margin: 0;
            width: 100%;
        }
    }

    .c-sa__feat-link {
        display: block;
    }

    .c-sa__excerpt {
        color: #333333;
        font-size: 12px;
        line-height: 17px;
        width: 75%;
        font-family: Georgia;
    }

    .c-sa__cta {
        color: #4a4a4a;
        font-family: Arial;
        font-size: 11px;
        letter-spacing: 1.83px;
        text-transform: uppercase;
        display: inline-block;
        margin-top: 24px;
    }
