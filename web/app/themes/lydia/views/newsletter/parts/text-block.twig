{% extends 'newsletter/global/flex-container.twig' %}

{% block flexcontent %}

    {% if object.content %}
    <table border="0" cellpadding="0" cellspacing="0" width="100%" class="c-tb">
        <tbody>
            <tr class="c-tb__item">
                <td class="c-tb__content" align="left" valign="middle" colspan="2">

                    {{ object.content }}

                    {% if object.signature %}
                        <div class="c-tb__signature">
                            <p>Yours sincerely,</p>
                            <img src="https://gallery.mailchimp.com/be77c5006ebd55787abce2788/images/7fe4ea2d-564f-45a4-9c4e-b8efcf0b0fdb.jpg" alt="Harry Jarman - Editor-In-Chief" class="c-tb__signature__image" width="112">
                            <p>Harry Jarman, Editor-In-Chief</p>
                        </div>
                    {% endif %}

                </td>
            </tr>
        </tbody>
    </table>
    {% endif %}

{% endblock %}