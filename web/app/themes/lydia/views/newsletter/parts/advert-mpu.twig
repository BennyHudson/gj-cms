{% extends 'newsletter/global/flex-container.twig' %}

{% block flexcontent %}

    {% if object.image %}
    <table border="0" cellpadding="0" cellspacing="0" width="100%" class="c-ad">
        <tbody>
            <tr class="c-ad__item">
                <td class="c-ad__feat" align="center" valign="middle">
                    <a class="c-ad__link" href="{{ object.link  }}" target="_blank">
                        <img class="c-ad__img" src="{{ Image(object.image).src|resize(600, 500) }}" width="300px" alt="Ad Block">
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
    {% endif %}

{% endblock %}
