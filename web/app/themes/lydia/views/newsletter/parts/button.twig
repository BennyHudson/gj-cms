{% extends 'newsletter/global/flex-container.twig' %}

{% block flexcontent %}

    {% if object.button %}
    <table border="0" cellpadding="0" cellspacing="0" width="100%" class="c-btn">
        <tbody>
            <tr class="c-btn__item">
                <td class="c-btn__content" align="center" valign="middle" colspan="2">

                    <a href="{{ object.button.link }}" class="c-btn__btn c-btn__btn--{{ object.button.style }}"><strong>{{ object.button.cta }}</strong></a>

                </td>
            </tr>
        </tbody>
    </table>
    {% endif %}

{% endblock %}